<div class="input">
    <label class="input__container">
        <input
                class="input__element"
                placeholder=""
                type=`{{type}}`
                minlength={{minlength}}
                maxlength={{maxlength}}
                required={{required}}
                name={{name}}
        />
        <span class="input__label">{{label}}</span>
    </label>
    <p class="input__helper-text"></p>
</div>
