<div class="profile-main-info">
    <div class="profile-main-info__text-content">
        <div class="profile-main-info__key">
            {{#if isButton}}
                {{> Button label=key type="profile-link" }}
            {{else}}
                {{key}}
            {{/if}}
        </div>

        <div class="profile-main-info__value">
            {{#if isButton }}
                {{value}}
            {{else}}
                {{#if isEdit }}
                    {{> ProfileInput type=type name=name required=required maxlength=maxlength minlength=minlength}}
                {{else}}
                    {{value}}
                {{/if}}
            {{/if}}
        </div>
    </div>

    {{#unless isLast}}
        <div class="profile-main-info__br"></div>
    {{/unless}}
</div>
